
@{
    ViewData["Title"] = "Daftar Buku";
}


@{
    ViewData["Title"] = "List";
}
<a href="/buku/create">Tambah Data</a>
<table id="table_id" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>No</th>
            <th>Nama Buku</th>
            <th>Penulis</th>
            <th>Harga</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "https://localhost:44320/api/buku",
                dataType: "json",
                success: function (data) {
                    $.each(data, function (i, val) {
                        $("#table_id tbody").append(
                            "<tr>" +
                            "<td>" + (i+1) + "</td>" +
                            "<td>" + val.judul+ "</td>" +
                            "<td>" + val.penulis + "</td>" +
                            "<td>" + val.harga + "</td>" +
                            "<td><a class='btn btn-warning update' href='/buku/edit/" + val.bukuId + "'>Update</a> <button class='test btn btn-danger' onclick='hapus(" + val.bukuId + ")'>Delete</button></td>" + 
                            "</tr>"
                        )
                    });
                    $('#table_id').DataTable();
                }

            });

        });
        function hapus(id){
            $.ajax({
                type: "DELETE",
                url: "https://localhost:44320/api/buku/" + id,
                success: function () {
                    alert("Sukses");
                    location.reload();
                }
            });

        }
    </script>
}

