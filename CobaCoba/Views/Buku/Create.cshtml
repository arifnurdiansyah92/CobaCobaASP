@model CobaCoba.Models.Buku

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Buku</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="judul" class="control-label"></label>
                <input asp-for="judul" class="form-control" />
                <span asp-validation-for="judul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="penulis" class="control-label"></label>
                <input asp-for="penulis" class="form-control" />
                <span asp-validation-for="penulis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tahunTerbit" class="control-label"></label>
                <input asp-for="tahunTerbit" class="form-control" />
                <span asp-validation-for="tahunTerbit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="harga" class="control-label"></label>
                <input asp-for="harga" class="form-control" />
                <span asp-validation-for="harga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btn" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $("#btn").click(function () {
            var buku = { judul: $("#judul").val(), penulis: $("#penulis").val(), tahunTerbit: $("#tahunTerbit").val(), harga: $("#harga").val() };
            $.ajax({
                type: "POST",
                contentType: 'application/json',
                data: JSON.stringify(buku),
                dataType: 'json',
                url: "/api/buku",
                contentType: "application/json",
                success: function () {
                    alert("Sukses");
                    location.assign("https://localhost:44320/buku/list");
                }
            });
        });
    </script>
}
