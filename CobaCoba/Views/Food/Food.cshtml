
@{
    ViewData["Title"] = "List";
}
<table id="table_id" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>No</th>
            <th>Nama Makanan</th>
            <th>Deskripsi</th>
            <th>Harga</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "https://localhost:44320/api/food",
                dataType: "json",
                success: function (data) {
                    $.each(data, function (i, val) {
                        $("#table_id tbody").append(
                            "<tr>" +
                            "<td>" + (i+1) + "</td>" +
                            "<td>" + val.nama + "</td>" +
                            "<td>" + val.deskripsi + "</td>" +
                            "<td>" + val.harga + "</td>" +
                            "</tr>"
                        )
                    });
                    $('#table_id').DataTable();
                }

            });

        });

    </script>
}
