@model CobaCoba.Models.SalesOrderHeader


@{
    ViewData["Title"] = "List Of Customer";
}

<h2>Customer</h2>
<table id="table_id" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <td colspan="4" class="text-right">
                <button class="btn btn-primary" data-toggle="modal" data-target="#formCreate">Create</button>
            </td>
        </tr>
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div id="formCreate" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Form Create</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Customer" class="control-label"></label>
                    <input asp-for="Customer" class="form-control" />
                    <span asp-validation-for="Customer" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">

                <div class="form-group">
                    <button class="pull-left btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button id="create-btn" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="formDelete" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                Want to delete this records?<br />
                Customer : <span id="customer-delete"></span>
            </div>
            <div class="modal-footer">
                <button type="button" id="delete-btn" class="btn btn-default">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<div id="formEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Form Edit</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <button id="update-btn" class="btn btn-primary">Update</button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function getthis(id) {
            $.ajax({
                type: "GET",
                url: "api/salesorder/" + id,    
                dataType: "json",
                success: function (data) {

                    $("#customer-delete").html(data.customer);
                    $("#delete-btn").val(data.salesOrderHeaderId);

                }
            });
        }
        $(document).ready(function () {
            getData();
        });
        function getData() {
            $.ajax({
                type: "GET",
                url: "api/salesorder",
                dataType: "json",
                success: function (data) {
                    $("#table_id tbody").html("");
                    $.each(data, function (i, val) {
                        $("#table_id tbody").append(
                            "<tr>" +
                            "<td>" + (i + 1) + "</td>" +
                            "<td>" + val.customer + "</td>" +
                            "<td><a class='btn btn-warning' href='/salesorder/edit/" + val.salesOrderHeaderId + "'>Edit</a> <button class='delete btn btn-danger' data-toggle='modal' data-target='#formDelete' onclick='getthis(" + val.salesOrderHeaderId + ")'>Delete</button></td>" +
                            "</tr>"
                        )
                    });
                    $('#table_id').DataTable();
                }

            });
        }
        $("#create-btn").click(function () {
            var data = { customer: $("#Customer").val() };
            $.ajax({
                type: "POST",
                contentType: 'application/json',
                data: JSON.stringify(data),
                dataType: 'json',
                url: "/api/salesorder",
                contentType: "application/json",
                success: function () {
                    getData();
                    $("#formCreate").modal('hide');
                    notif("Sukses", "success");
                }
            });
        });
        $("#delete-btn").click(function () {
            $.ajax({
                type: "DELETE",
                url: "/api/salesorder/" + $(this).val(),
                success: function () {
                    getData();
                    $("#formDelete").modal('hide');
                    notif("Sukses Delete", "success");
                }
            });
        });
    </script>
}